<Page x:Class="FileNameConverter.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileNameConverter.Views"
      mc:Ignorable="d"
      Title="MenuPage" Height="150" Width="400">

    <Grid Height="204" VerticalAlignment="Bottom">
        <TextBlock TextAlignment="Center" FontSize="30" Text="CLEVI File Name Converter" FontFamily="Segoe UI Black" Margin="0,70,0,0" Height="51" VerticalAlignment="Top"></TextBlock>
        <StackPanel Background="#FFF9DDDD" Orientation="Horizontal" Height="26" VerticalAlignment="Top" Margin="0,136,80,0" HorizontalAlignment="Right" Width="258">
            <Button x:Name="btnFolderSetting" Width="80" Margin="0 0 10 0" Content="폴더 설정" Background="#FF676767" Click="btnFolderSetting_Click" FontFamily="Arial Black" Foreground="#FFF3F3F3"></Button>
            <Button x:Name="btnTitleSetting" Width="80" Margin="0 0 10 0" Content="제목 설정" Background="#FF676767" Click="btnTitleSetting_Click" Foreground="#FFF9F9F9" FontFamily="Arial Black"></Button>
            <Button x:Name="btnFileSetting" Width="80" Margin="0 0 0 0" Content="파일 설정" Background="#FF676767" Click="btnFileSetting_Click" Foreground="White" FontFamily="Arial Black"></Button>
        </StackPanel>
    </Grid>
</Page>
